{
  "monitoring": {
    "checkInterval": 60000,
    "enabled": true,
    "description": "Kontrol aralığı (ms) - 60000 = 1 dakika"
  },
  "browser": {
    "headless": true,
    "pageLoadTimeout": 30000,
    "videoWaitTime": 10000,
    "viewportWidth": 1920,
    "viewportHeight": 1080,
    "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36",
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--disable-gpu"
    ]
  },
  "screenshot": {
    "format": "png",
    "quality": 80,
    "saveDebugScreenshots": false,
    "debugPath": "./screenshots"
  },
  "analysis": {
    "colorTolerance": 5,
    "minimumMatchForError": 2,
    "retryOnFailure": 2,
    "retryDelay": 5000
  },
  "telegram": {
    "enabled": true,
    "sendOnlyErrors": true,
    "dailyReportTime": "09:00",
    "groupMessages": true
  },
  "logging": {
    "level": "info",
    "saveToFile": true,
    "maxFileSize": "10M",
    "maxFiles": 7,
    "consoleOutput": true
  }
}
